{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "AudioWorkletGlobalScope": "readonly",
    "tf": "readonly"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn"
  },
  "ignorePatterns": ["dist/**/*", "node_modules/**/*", "webpack.config.js"]
}